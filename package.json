{
  "name": "molde-ui",
  "author": "Molde Development",
  "license": "MIT",
  "version": "0.1.6",
  "description": "UI component library built with React, TypeScript, Tailwind CSS and DaisyUI",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite --config dev/vite.config.ts",
    "dev:playground": "vite --config dev/vite.config.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "typescript",
    "ui",
    "components",
    "tailwindcss",
    "daisyui",
    "component-library",
    "react-components",
    "ui-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MoldeDevelopment/molde-ui.git"
  },
  "bugs": {
    "url": "https://github.com/MoldeDevelopment/molde-ui/issues"
  },
  "homepage": "https://molde-ui.vercel.app/",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "daisyui": "^5.3.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.8"
  }
}
